<Window x:Class="TMtextng.MainWindow" Closed="Window_Closed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:TMtextng.Properties"
        xmlns:local="clr-namespace:TMtextng"
        mc:Ignorable="d"
        Title="TMtextneu" 
         Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={local:RatioConverter}, ConverterParameter='0.98' }"
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={local:RatioConverter}, ConverterParameter='0.98' }"
        >
    <Grid>
        <Frame x:Name="KeyboardFrame" Content="" NavigationUIVisibility="Hidden"></Frame>
    </Grid>

</Window>
